<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:orientation="vertical"
    tools:context="com.teamvii.healthcare.Ui.FindDoctor">

    <TextView
        android:id="@+id/textViewPassengerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:letterSpacing="0.5"
        android:text="@string/welcom"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ridgt_gray_background"
            android:text="@string/select_speciality"
            android:textAlignment="center" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#e7e9e4">

        </View>

        <Spinner
            android:id="@+id/SP_SPECIALITY"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/sp_gray"
            android:entries="@array/speciality"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gray_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/ridgt_gray_background"
                android:text="@string/select_state"
                android:textAlignment="center" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#e7e9e4">

            </View>

            <Spinner
                android:id="@+id/SP_STAT"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/color_gay"
                android:entries="@array/state"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e7e9e4">

            </View>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#e7e9e4">

            </View>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/location"
                android:padding="20dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:background="#e7e9e4">

        </View>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@drawable/gray_background"
            android:gravity="start">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ridgt_gray_background"
                android:text="@string/select_area"
                android:textAlignment="center" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#e7e9e4">

            </View>

            <Spinner
                android:id="@+id/SP_AREA"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/sp_gray"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ridgt_gray_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ridgt_gray_background"
            android:text="@string/insurance"
            android:textAlignment="center" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#e7e9e4">

        </View>

        <Spinner
            android:id="@+id/SP_INSURANCE"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/sp_gray"
            android:entries="@array/insurance"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin5"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@drawable/gray_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ridgt_gray_background"
                android:text="@string/select_gender"
                android:textAlignment="center" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#e7e9e4">

            </View>

            <Spinner
                android:id="@+id/SP_GENDER"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/sp_gray"
                android:entries="@array/gender"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:background="#e7e9e4">

        </View>

        <LinearLayout
            android:id="@+id/lin6"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@drawable/gray_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ridgt_gray_background"
                android:text="@string/select_lang"
                android:textAlignment="center" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#e7e9e4">

            </View>

            <Spinner
                android:id="@+id/SP_LANG"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/sp_gray"
                android:entries="@array/gender"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="351dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/green_background"
        android:text="@string/find_doctor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lin5"
        app:layout_constraintTop_toBottomOf="@+id/lin6" />

    <TextView
        android:id="@+id/Testtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="test"
        android:textSize="25dp" />

</LinearLayout>
